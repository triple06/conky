background yes
use_xft yes
xftfont source code pro :pixelsize=14
xftalpha 0.8
update_interval 1
total_run_times 0
own_window_class conky
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no
stippled_borders 0
border_width 0
default_color grey
default_shade_color black
default_outline_color black
alignment top_left
gap_x 15
gap_y 50
no_buffers yes
override_utf8_locale yes
cpu_avg_samples 1
net_avg_samples 1
use_spacer left
   
color1 169fff

TEXT
| ${exec cat /etc/os-release | grep NAME | head -1 | cut -c 7-10}
'-- ${exec cat /etc/os-release | grep NAME | head -1 | cut -c 12-16}
    |
    |-- Time
    |   |-- Clock
    |   |   |-- Now < ${time %k:%M:%S} >
    |   |   '-- Uptime < $uptime >
    |   |-- Date
    |   |   |-- Now < ${time %A %d. %B} >
    |   |   |-- Day < ${time %j} >
    |   |   |-- Week < ${time %W} >
    |   |   |-- Mo.  < ${time %m} >
    |   |   '-- Yr < ${time %Y} >   
    '-- Devices
        |-- < ${if_existing /dev/hidraw1}Logitech Mouse$else$color...$endif $color>
        |-- < ${if_existing /dev/sda1}USB Stick$else...${endif} >
        '-- < ${if_mounted /home/ck/Encfs/crypt}Crypt$else...${endif} >

${alignc}${font stylebats:size=16}q${font} Calendar   
${hr}
${alignc}${exec date +%B\ %Y | sed 's/^.\| [a-z]/\U&/g'}
${execpi 60 JOUR=$(date +%d) ; cal | sed '1d' | sed 's/^/         /' | sed 's/'$JOUR'/${color1}'$JOUR'${color}/g'}${font}
