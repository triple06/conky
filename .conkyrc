
total_run_times 0		
background yes		
cpu_avg_samples 1			
net_avg_samples 2	
double_buffer yes		
no_buffers yes		
text_buffer_size 1024		
out_to_console no		
update_interval 1		
alignment top_right
minimum_size 0
maximum_width 0
gap_x 24
gap_y 5
draw_shades yes
draw_outline no	
draw_borders no
border_width 1	
border_inner_margin 1		
own_window yes	
own_window_type desktop 		
own_window_transparent yes
use_xft yes					
override_utf8_locale yes 		
uppercase no			
use_spacer no		
xftfont source code pro:pixelsize=14
stippled_borders 5			
default_color white		
default_shade_color black	
default_outline_color black
  

color1 c0c0c0   # grey
color2 ffa500	# orange
color3 ffff00   # yellow


TEXT


${font spaceage:size=20}${alignc}${kernel}
${alignc}${machine}${font}
${hr}
${font StyleBats:size=16}a${font} System ${color1}${cpu cpu0}%${color}
${offset 35}CPU 1 : ${color2}${exec sensors | grep 'Core 0' | cut -c 17-22}C${color}
${offset 35}Frq 1 : ${color1}${freq_g 1} GHz${color}
${alignr}${voffset -30}${cpugraph cpu1 21,180 8b2132 fe8608}
${offset 35}CPU 2 : ${color2}${exec sensors | grep 'Core 1' | cut -c 17-22}C${color}
${offset 35}Frq 2 : ${color1}${freq_g 2} GHz${color}
${alignr}${voffset -30}${cpugraph cpu2 21,180 8b2132 fe8608}
${offset 35}CPU 3 : ${color2}${exec sensors | grep 'Core 2' | cut -c 17-22}C${color}
${offset 35}Frq 3 : ${color1}${freq_g 3} GHz${color}
${alignr}${voffset -30}${cpugraph cpu1 21,180 8b2132 fe8608}
${offset 35}CPU 4 : ${color2}${exec sensors | grep 'Core 3' | cut -c 17-22}C${color}
${offset 35}Frq 4 : ${color1}${freq_g 4} GHz${color}
${alignr}${voffset -30}${cpugraph cpu2 21,180 8b2132 fe8608}

${font StyleBats:size=16}q${font} Ram ${color1}${memperc}%${color}
${offset 35}Used  : ${color1}${mem} / ${memmax}${goto 250}${alignr}${color}
${offset 35}Top   : ${color1}${top_mem name 1}${goto 250}${top_mem pid 1}${alignr}${color}${top mem 1}%
${offset 35}      : ${color1}${top_mem name 2}${goto 250}${top_mem pid 2}${alignr}${color}${top mem 2}%
${offset 35}      : ${color1}${top_mem name 3}${goto 250}${top_mem pid 3}${alignr}${color}${top mem 3}%

${font StyleBats:size=16}5${font} Transfers
${offset 35}Up    : ${color1}${upspeed wlp2s0}${color}
${offset 35}Total : ${totalup wlp2s0}
${alignr}${voffset -30}${upspeedgraph wlp2s0 21,180 8b1932 fe8608}
${offset 35}Down  : ${color1}${downspeed wlp2s0}${color}
${offset 35}Total : ${totaldown wlp2s0}
${alignr}${voffset -30}${downspeedgraph wlp2s0 21,180 8b1932 fe8608}

${font poky:size=14}Y${font} Network ${color1}${wireless_link_qual_perc wlp2s0}%${color}
${offset 35}Name  : ${color1}${wireless_essid wlp2s0}${color}
${offset 35}Publ. : ${color2}${execi 60 curl https://freegeoip.app/xml/ | grep IP | cut -d'<' -f2 | cut -d'>' -f2}${color}
${offset 35}Qual. : ${color1}${wireless_link_qual wlp2s0}/${wireless_link_qual_max wlp2s0}${color}
${offset 35}Open  : ${color1}${tcp_portmon 1 65535 count}${color}

${font poky:size=14}w${font} VPN
${offset 35}Satus : ${color1}${execi 60 nordvpn status | strings | grep Status | cut -c 9-20}${color}
${offset 35}Area  : ${color1}${execi 60 curl https://freegeoip.app/xml/ | grep City | cut -d'<' -f2 | cut -d'>' -f2
}${color} : ${color1}${execi 60 curl https://freegeoip.app/xml/ | grep '<RegionName>' | cut -d'<' -f2 | cut -d'>' -f2}${color} : ${color1}${execi 60 curl https://freegeoip.app/xml/ | grep '<CountryCode>' | cut -d'<' -f2 | cut -d'>' -f2}${color}

${font poky:size=15}y${font} SSD
${offset 35}Root  : ${color1}${fs_type /}${color}${goto 180}${alignr}${fs_used /}/${fs_size /}
${offset 35}${fs_bar 10 /}
${offset 35}Home  : ${color1}${fs_type /home}${color}${goto 180}${alignr}${fs_used /home}/${fs_size /home}
${offset 35}${fs_bar 10 /home}




